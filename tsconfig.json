{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "allowJs": false,
    "checkJs": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "composite": false,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "dist", 
    "spec/**"
  ]
}